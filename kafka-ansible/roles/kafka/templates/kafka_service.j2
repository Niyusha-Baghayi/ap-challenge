[Unit]
Description=Apache Kafka Server
Documentation=http://kafka.apache.org/documentation.html
Requires=zookeeper.service

[Service]
Type=simple
Environment="JAVA_HOME={{ java_home }}"
ExecStart={{ kafka_installation_path }}/bin/kafka-server-start.sh {{ kafka_installation_path }}/config/server.properties
ExecStop={{ kafka_installation_path }}/bin/kafka-server-stop.sh

[Install]
WantedBy=multi-user.target